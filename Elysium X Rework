local WindUI = loadstring(game:HttpGet("https://github.com/Footagesus/WindUI/releases/latest/download/main.lua"))()

local Window = WindUI:CreateWindow({
    Title = "Elysium X Rework",
    Icon = "award",
    Author = "By Atlas",
    Folder = "Elysium X Rework",
    Transparent = true,
    Theme = "Crimson",
    Resizable = true,
    HideSearchBar = false,
    ScrollBarEnabled = true,

    KeySystem = {
        Key = { "260126" },
        Note = "Still under development expect bugs",
    },
})

Window:Tag({
    Title = "Rework In Progress",
    Icon = "book-plus",
    Color = Color3.fromHex("#000080"),
    Radius = 13,
})

Window:EditOpenButton({
    Title = "Open Elysium",
    Icon = "monitor",
    CornerRadius = UDim.new(0,50),
    StrokeThickness = 2,
    Color = ColorSequence.new(
        Color3.fromHex("FF0000"),
        Color3.fromHex("000080")
    ),
    OnlyMobile = false,
    Enabled = true,
    Draggable = true,
})

local MainTab = Window:Tab({ Title = "Main", Icon = "star", Locked = false })
local SettingsTab = Window:Tab({ Title = "Settings", Icon = "settings", Locked = false })

MainTab:Paragraph({
    Title = "Credits",
    Desc = "By Atlas and deky",
    Color = "Red",
    Image = "rbxassetid://18631102886",
    ImageSize = 50,
    Locked = false,
    Buttons = {
        {
            Icon = "link",
            Title = "TikTok",
            Callback = function()
                setclipboard("@mrnexus000")
                WindUI:Notify({
                    Title = "TikTok",
                    Content = "Username Copied",
                    Duration = 3,
                    Icon = "external-link",
                })
            end,
        },
        {
            Icon = "link",
            Title = "YouTube",
            Callback = function()
                setclipboard("@Atlas_Scripts")
                WindUI:Notify({
                    Title = "YouTube",
                    Content = "Username Copied",
                    Duration = 3,
                    Icon = "external-link",
                })
            end,
        },
    }
})

MainTab:Dropdown({
    Title = "Theme",
    Values = { "Rose","Light","MonokaiPro","Plant","Midnight","CottonCandy","Dark","Indigo","Sky","Crimson","Amber","Violet","Red" },
    Value = "Crimson",
    Callback = function(option)
        WindUI:SetTheme(option)
    end
})

MainTab:Dropdown({
    Title = "Font",
    Values = { "Standard","Audiowide","Caesar Dressing","Faster One","Silkscreen","Teko" },
    Value = "Standard",
    Callback = function(option)
        if option == "Standard" then
            WindUI:SetFont("rbxasset://fonts/families/SourceSansPro.json")
        elseif option == "Audiowide" then
            WindUI:SetFont("rbxassetid://12187360881")
        elseif option == "Caesar Dressing" then
            WindUI:SetFont("rbxassetid://12187368843")
        elseif option == "Faster One" then
            WindUI:SetFont("rbxassetid://12187370928")
        elseif option == "Silkscreen" then
            WindUI:SetFont("rbxassetid://12187371840")
        elseif option == "Teko" then
            WindUI:SetFont("rbxassetid://12187376174")
        end
    end
})

MainTab:Toggle({
    Title = "Transparent",
    Icon = "palette",
    Value = true,
    Callback = function(state)
        Window:ToggleTransparency(state)
    end
})

local ConfigSec = SettingsTab:Section({
    Title = "Manual Settings",
    Desc = "Manage your configs",
    Icon = "folder",
    Opened = true,
    Box = true,
    BoxBorder = true,
})

local currentConfig = ""
local configList = {}

local function RefreshConfigs()
    configList = WindUI:GetConfigs()
    ConfigDropdown:SetValues(configList)
end

ConfigSec:Input({
    Title = "Config Name",
    Callback = function(name)
        currentConfig = name
    end
})

ConfigSec:Button({
    Title = "Save Config",
    Callback = function()
        if currentConfig ~= "" then
            WindUI:SaveConfig(currentConfig)
            RefreshConfigs()
        end
    end
})

ConfigDropdown = ConfigSec:Dropdown({
    Title = "Select Config",
    Values = {},
    Callback = function(selected)
        currentConfig = selected
        WindUI:LoadConfig(selected)
    end
})

ConfigSec:Button({
    Title = "Delete Config",
    Callback = function()
        if currentConfig ~= "" then
            WindUI:DeleteConfig(currentConfig)
            RefreshConfigs()
        end
    end
})

ConfigSec:Button({
    Title = "Refresh List",
    Callback = function()
        RefreshConfigs()
    end
})

RefreshConfigs()
